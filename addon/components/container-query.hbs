{{#let (element this.tagName) as |Tag|}}
  <Tag
    class="container-query"
    data-test-container-query
    {{container-query
      dataAttributePrefix=@dataAttributePrefix
      debounce=@debounce
      features=@features
    }}
    ...attributes
  >
    {{yield (hash
      features=this.queryResults
      dimensions=(hash
        aspectRatio=this.aspectRatio
        height=this.height
        width=this.width
      )
    )}}
  </Tag>
{{/let}}