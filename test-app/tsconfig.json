{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "test-app/tests/*": ["tests/*"],
      "test-app/*": ["app/*"],
      "*": ["types/*"]
    },
    "plugins": [
      {
        "name": "@glint/tsserver-plugin"
      }
    ],
    "types": ["ember-source/types", "@glint/ember-tsc/types"]
  },
  "include": ["app/**/*", "tests/**/*", "types/**/*"]
}
