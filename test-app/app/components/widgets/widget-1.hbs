<ContainerQuery
  @features={{hash
    tall=(aspect-ratio max=0.8)
    square=(aspect-ratio min=0.8 max=1.25)
    wide=(aspect-ratio min=1.25)
  }}
  @tagName="section"
  local-class="container"
>
  <header local-class="header">
    <h2 local-class="text">Widget 1</h2>
  </header>

  <div local-class="items">
    <div local-class="item-1">
      <Widgets::Widget-1::Item @title="Item 1" />
    </div>

    <div local-class="item-2">
      <Widgets::Widget-1::Item @title="Item 2" />
    </div>

    <div local-class="item-3">
      <Widgets::Widget-1::Item @title="Item 3" />
    </div>
  </div>
</ContainerQuery>