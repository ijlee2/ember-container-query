{{page-title "Ember Container Query"}}

<div
  local-class="application no-focus-outline"
  {{did-insert this.allowFocusOutlineOnTab}}
>
  <header local-class="header">
    <NavigationMenu
      @menuItems={{array
        (hash
          label="Home"
          route="index"
        )
        (hash
          label="Album"
          route="album"
        )
        (hash
          label="Dashboard"
          route="dashboard"
        )
        (hash
          label="Form"
          route="form"
        )
      }}
      @name="Main Navigation"
    />
  </header>

  <main local-class="main">
    <div local-class="center">
      {{outlet}}
    </div>
  </main>

  <footer local-class="footer">
    <span local-class="copyright">
      Created by <a href="https://www.linkedin.com/in/ijlee2/" local-class="link" rel="noopener noreferrer" target="_blank">Isaac J. Lee</a> Â© 2022
    </span>
  </footer>
</div>