{{page-title "Ember Container Query"}}

<div
  local-class="application no-focus-outline"
  {{did-insert this.allowFocusOutlineOnTab}}
>
  <header local-class="header">
    <NavigationMenu
      @name="Main Navigation"
      @menuItems={{array
        (hash route="index" label="Home")
        (hash route="album" label="Album")
        (hash route="dashboard" label="Dashboard")
        (hash route="form" label="Form")
      }}
    />
  </header>

  <main local-class="main">
    <div local-class="center" tabindex="0">
      {{outlet}}
    </div>
  </main>

  <footer local-class="footer">
    <span local-class="copyright">
      Created by <a local-class="link" href="https://www.linkedin.com/in/ijlee2/" target="_blank" rel="noopener noreferrer">Isaac J. Lee</a> Â© 2020
    </span>
  </footer>
</div>