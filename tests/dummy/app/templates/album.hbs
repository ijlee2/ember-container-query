{{page-title "Album"}}

<Ui::Page @title={{@model.name}}>
  <ContainerQuery
    @features={{hash
      large=(cq-width min=960)
      tall=(cq-height min=400)
    }}
    as |CQ|
  >
    {{#let
      (and CQ.features.large CQ.features.tall)
      as |showLyrics|
    }}
      <div
        local-class="container {{if showLyrics 'with-lyrics'}}"
      >
        <div local-class="album-summary">
          <div>
            by
            <strong>{{@model.band.name}}</strong>
          </div>

          <div>
            {{@model.publicationDate}}
            ·
            {{@model.tracks.length}}
            songs
            {{#if @model.tracks}}
              ·
              {{@model.totalLengthInMinutes}}
              minutes
            {{/if}}
          </div>
        </div>

        <div
          local-class="album-tracks"
          tabindex={{if showLyrics "0"}}
        >
          <Tracks @tracks={{@model.tracks}} />
        </div>

        {{#if showLyrics}}
          <div
            data-test-track-lyrics
            local-class="track-lyrics"
            tabindex="0"
          >
            <p local-class="heading-2">Lyrics</p>

            <div>
