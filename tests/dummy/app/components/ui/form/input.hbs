<div
  local-class="container
    {{if @isWide "is-wide"}}
    {{unless this.errorMessage "no-feedback"}}
  "
>
  <label
    data-test-label
    for={{this.inputId}}
    local-class="label"
  >
    {{@label}}

    {{#if @isRequired}}
      <span aria-hidden="true">
        *
      </span>
    {{/if}}
  </label>

  <input
    data-test-field={{@label}}
    disabled={{@isDisabled}}
    id={{this.inputId}}
    local-class="input
      {{if (or @isDisabled @isReadOnly) "is-disabled"}}
    "
    placeholder={{@placeholder}}
    readonly={{@isReadOnly}}
    required={{@isRequired}}
    type={{this.type}}
    value={{this.value}}
    {{on "input" this.updateValue}}
  />

  {{#if this.errorMessage}}
    <div local-class="feedback is-error">
      {{svg-jar "alert" aria-hidden="true"}}

      <span
        data-test-feedback={{@label}}
        local-class="message"
        role="alert"
      >
        {{this.errorMessage}}
      </span>
    </div>
  {{/if}}
</div>