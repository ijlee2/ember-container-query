<ContainerQuery
  @features={{hash
    small=(width max=480)
    medium=(width min=480 max=640)
    large=(width min=640)
    tall=(height min=320)
  }}
  as |CQ|
>
  {{#if (strict-and CQ.features.large CQ.features.tall)}}
    <Tracks::Table @tracks={{@tracks}} />

  {{else}}
    <Tracks::List
      @numColumns={{if
        CQ.features.small
        1
        (if CQ.features.medium 2 3)
      }}
      @tracks={{@tracks}}
    />

  {{/if}}
</ContainerQuery>