{{page-title "Form"}}

<Ui::Page @title="Form">
  <Ui::Form
    @data={{hash
      donation=undefined
      email=undefined
      message="I ðŸ§¡ container queries!"
      name=undefined
      subscribe=true
    }}
    @instructions="Still have questions about ember-container-query? Try sending me a message."
    @onSubmit={{this.submitForm}}
    @title="Contact me"
    as |F|
  >
    <div class={{this.styles.field}}>
      <F.Input
        @isRequired={{true}}
        @key="name"
        @label="Name"
        @placeholder="Zoey"
      />
    </div>

    <div class={{this.styles.field}}>
      <F.Input
        @isRequired={{true}}
        @key="email"
        @label="Email"
        @placeholder="zoey@emberjs.com"
        @type="email"
      />
    </div>

    <div class={{this.styles.field}}>
      <F.Textarea @key="message" @label="Message" />
    </div>

    <div class={{this.styles.field}}>
      <F.Checkbox
        @key="subscribe"
        @label="Subscribe to The Ember Times?"
      />
    </div>

    <div class={{this.styles.field}}>
      <F.Number
        @key="donation"
        @label="Donation amount ($)"
        @minValue={{0}}
        @placeholder="100"
        @step={{10}}
      />
    </div>
  </Ui::Form>
</Ui::Page>