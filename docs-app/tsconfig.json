{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "docs-app/tests/*": [
        "tests/*"
      ],
      "docs-app/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    },
    "moduleResolution": "node16",
    "skipLibCheck": true
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  }
}
