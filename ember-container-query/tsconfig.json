{
  "extends": "@shared-configs/typescript/ember",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "declarationDir": "declarations",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "unpublished-development-types/**/*"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  }
}
